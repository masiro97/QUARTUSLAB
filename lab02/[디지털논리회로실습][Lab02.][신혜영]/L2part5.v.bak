module L2part5(s,u,v,w,x,y,m0,m1,m2,m3,m4, led,HEX0, HEX1, HEX2, HEX3, HEX4);

 input [2:0]s,u,v,w,x,y;
   
   output [0:6]HEX0, HEX1, HEX2, HEX3, HEX4;
   output [2:0]m0,m1,m2,m3,m4;
   output [17:0]led;
   
   assign led = sw;
   
   assign m4=  (s ==3'b000) ? u :
               (s ==3'b001) ? v :
               (s ==3'b010) ? w :
               (s ==3'b011) ? x : y;
               
   assign m3 =  (s ==3'b000) ? v :
               (s ==3'b001) ? w :
               (s ==3'b010) ? x :
               (s ==3'b011) ? y : u;
               
   assign m2 =  (s ==3'b000) ? w :
               (s ==3'b001) ? x :
               (s ==3'b010) ? y :
               (s ==3'b011) ? u : v;
               
   assign m1 =  (s ==3'b000) ? x :
               (s ==3'b001) ? y :
               (s ==3'b010) ? u :
               (s ==3'b011) ? v : w;
               
   assign m0 =  (s ==3'b000) ? y :
               (s ==3'b001) ? u :
               (s ==3'b010) ? v :
               (s ==3'b011) ? w : x;
               
   
   assign HEX4 = (m4 ==3'b000) : 7'0110111:
                 (m4 ==3'b001) : 7'1001111:
                 (m4 ==3'b010) : 7'0001110:
                 (m4 ==3'b011) : 7'0001110: 7'b1111110;
                 
   assign HEX3 = (m3 ==3'b000) : 7'0110111:
                 (m3 ==3'b001) : 7'1001111:
                 (m3 ==3'b010) : 7'0001110:
                 (m3 ==3'b011) : 7'0001110: 7'b1111110;
                 
   assign HEX2 = (m2 ==3'b000) : 7'0110111:
                 (m2 ==3'b001) : 7'1001111:
                 (m2 ==3'b010) : 7'0001110:
                 (m2 ==3'b011) : 7'0001110: 7'b1111110;
                 
                 
   assign HEX1 = (m1 ==3'b000) : 7'0110111:
                 (m1 ==3'b001) : 7'1001111:
                 (m1 ==3'b010) : 7'0001110:
                 (m1 ==3'b011) : 7'0001110: 7'b1111110;
                 
   assign HEX0 = (m0 ==3'b000) : 7'0110111:
                 (m0 ==3'b001) : 7'1001111:
                 (m0 ==3'b010) : 7'0001110:
                 (m0 ==3'b011) : 7'0001110: 7'b1111110;
					  
endmodule
